class Save extends Connect
{

    protected
    $car;

    public function car()
    {
        $car = new Car;
        return $car->fillable();
    }

    public function saveLogic( $table )
    {
        if ( $table === 'cars' )
        {
            $data =
            [
                "table" => $table,
                "class" => get_object_vars($this->car()->fillable()),

            ];
            return $data;
        }
    }

    public function save ( $table )
    {

        return $this->saveLogic($table);
        $query ="INSERT INTO $table ( name, role, age )
        VALUES( 'Emeka', 'Developer', '20' )";
        //return $query;
        //return get_object_vars($table);
        //return $this->fetchData( $query );
    }


}
